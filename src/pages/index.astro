---
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { getAllPosts, sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

const cactusTech: Array<{ year: string; name: string; href: string }> = [

	{
		year: "2024 - Present",
		name: "Fomo Pay",
    href: "https://www.fomopay.com/",
	},
	{
		year: "2023 - 2024",
		name: "Workstream",
		href: "https://www.workstream.us/",
	},
	{
		year: "2022 - 2023",
		name: "Freyr Solutions",
		href: "https://www.freyrsolutions.com/",
	},
	{
		year: "2021 - 2022",
		name: "China Merchants Bank",
		href: "https://cmbnt.cmbchina.com/",
	},
	{
		year: "2017 - 2021",
		name: "Manulife",
		href: "https://www.manulife.com",
	},
	{
		year: "2015 - 2017",
		name: "JEZETEK",
		href: "http://www.jzetech.com/",
	},
];
---

<PageLayout meta={{ title: "Home" }}>
	<section>

    <!-- <h1 class="title mb-6">Hello World!</h1> -->
		<h1 class="title mb-6 flex justify-center">
		<SocialList />
    </h1>
		<p class="mb-4">
      Hello, I'm Clarence Du. I'm a polyglot full-stack developer. <br />
      <br />
      I used to work in Insurance, Banking, Payment, Pharmeceutical industries with frontend Experience in Angular,React, and backend experience in Node.js, Golang, C#, Python. <br />
      <br />
      I focus more on backend, I love OS principles, I think most of design pattern can be found in Unix/Linux, that's why I wanna dive into OS principles. <br />
      <br />
      I write about my life, TypeScript, Golang, C#, and more. Welcome! <br />
    </p>
    <!-- <SocialList /> -->
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
  <section class="mt-16">
		<h2 class="title mb-4 text-xl">Experience</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				cactusTech.map(({ name,year,href }) => (
					<li>
						<a
							href={href}
							target="_blank"
							rel="noopener noreferrer"
							class="cactus-link inline-block"
						>
						<p class="inline-block sm:mt-2 font-bold">{name}</p>
						</a>:
            <div class="inline-block sm:mt-2">
              {year}
            </div>
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
