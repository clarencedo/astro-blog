---
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { getAllPosts, sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

const cactusTech: Array<{ year: string; name: string; href: string }> = [
	{
		year: "2023.12 - Present",
		name: "PWC China",
		href: "https://www.pwc.com/gx/en.html",
	},
	{
		year: "2023.08 - 2023.10",
		name: "Workstream",
		href: "https://www.workstream.us/",
	},
	{
		year: "2021.12 - 2021.07",
		name: "FreyrSolutions",
		href: "https://www.freyrsolutions.com/",
	},
	{
		year: "2021.07 - 2021.12",
		name: "China Merchants Bank",
		href: "",
	},
	{
		year: "2019.12 - 2021.07",
		name: "Manulife",
		href: "https://www.manulife.com",
	},
];
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Hello World!</h1>
		<p class="mb-4">
      Hello, I'm Clarence Du. I'm a full-stack developer with 8 years of experience.
      I enjoy building sites, apps, robust system.
    </p>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
  <section class="mt-16">
		<h2 class="title mb-4 text-xl">Experience</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				cactusTech.map(({ name,year,href }) => (
					<li>
						<a
							href={href}
							target="_blank"
							rel="noopener noreferrer"
							class="cactus-link inline-block"
						>
						<p class="inline-block sm:mt-2 font-bold">{name}</p>
						</a>:
            <div class="inline-block sm:mt-2">
              {year}
            </div>
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
